
@model List<Genre>

@{
    ViewData["Title"] = "Index";
    int dataOrder = 0;
}



<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 d-flex justify-content-between mb-3 align-items-center ">
            <div>
                <h1>Genres</h1>
            </div>
            <div>
                <a class="btn btn-primary" asp-controller="genre" asp-action="create">Create</a>
            </div>
        </div>
        <div class="col-md-8">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Book Count</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        dataOrder++;
                        <tr>
                            <th scope="row">@dataOrder</th>
                            <td>@item.Name</td>
                            <td>@item.Books.Count</td>
                            <td>
                                <a asp-controller="genre" asp-action="edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                                <a class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                    
                </tbody>
            </table>
        </div>
    </div>
</div>

